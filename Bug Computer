import Tkinter

def button():
    top = Tkinter.Tk()
    bugHealth = 25
    B = Tkinter.Button(top, width = 25, text ="Attack", command = lambda: hi(bugHealth))

    B.pack()
    top.mainloop()
    
def hi(bugHealth):
    bugHealth = bugHealth - 1
    if(bugHealth == 0):
        print "You killed it!"
    
